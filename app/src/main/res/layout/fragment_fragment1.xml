<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".User.Fragments.fragment1">

        <TextView
            android:id="@+id/hii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/loraitalic"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Hii"
            android:textColor="@color/main"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/myes"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hii"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="117dp"
            android:layout_marginBottom="100dp"
            android:text="Morning yes" />

        <Button
            android:id="@+id/mno"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hii"
            android:layout_alignEnd="@+id/myes"
            android:layout_marginStart="100dp"
            android:layout_marginTop="163dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="100dp"
            android:text="Morning No" />

        <ProgressBar
            android:id="@+id/feedbackProgressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="277dp"
            android:layout_marginEnd="184dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/eyes"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/mno"
            android:layout_alignBottom="@+id/hii"
            android:layout_marginEnd="-4dp"
            android:layout_marginBottom="-367dp"
            android:text="Evening Yes" />

        <Button
            android:id="@+id/eno"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hii"
            android:layout_alignEnd="@+id/eyes"
            android:layout_marginTop="392dp"
            android:layout_marginEnd="0dp"
            android:text="Evening No" />

</RelativeLayout>