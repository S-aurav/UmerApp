<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:id="@+id/userProfileImage"
            android:layout_centerVertical="true"
            android:src="@drawable/user"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="16sp"
            android:text="Users Name"
            android:layout_toEndOf="@id/userProfileImage"
            android:fontFamily="@font/popins"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/main"
            android:id="@+id/name_of_user"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rautshuham280@gmail.com"
            android:id="@+id/email_of_user"
            android:layout_below="@id/name_of_user"
            android:layout_toEndOf="@id/userProfileImage"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:paddingEnd="10dp"
            android:textSize="15sp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9689438141"
            android:id="@+id/phone_of_user"
            android:layout_below="@id/email_of_user"
            android:layout_toEndOf="@id/userProfileImage"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:paddingEnd="10dp"
            android:textSize="15sp"

            />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/phone_of_user"
            android:layout_marginTop="5dp"
            android:background="?android:attr/listDivider" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>